<%= form_for @greeting do |f| %>
<%= f.label "Send", :body %>
<%= f.text_field :body, placeholder: "Greetings, earthling!" %>
<%= f.label "to", :receiver %>
<%= f.collection_select :receiver_id, @users, :id, :user_name  %>
<%= f.submit "Greet!" %>
<% end %>


<div id="the_greetings">
<%= render @greetings %>
</div>

<script>
		window.pusher_key = "<%= ENV.fetch("PUSHER_PUBLIC_KEY") %>";
		window.pusher_channel = "<%= current_user.id %>"
</script> 