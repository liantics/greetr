# easy environment variables
gem 'dotenv-rails', '~> 2.7', '>= 2.7.1', group: [:development, :test]

# pusher real time message pushing gem
gem 'pusher', '~> 1.3', '>= 1.3.2'

# enable storage of env vars in application.yml
gem 'figaro'

